@model PassionProject.Models.ReceptionDto
@{
    ViewBag.Title = "Edit";
}

<h2>Edit a Reception</h2>

<form action="/Reception/Update" method="POST">
    <div>
        <label>Name of Event:</label>
        <input name="ReceptionName" type="text" value="ReceptionName"/>
    </div>
    <div>
        <label>Location of Event:</label>
        <input name="ReceptionLocation" type="text" value="ReceptionLocation"/>
    </div>
    <div>
        <label>Date of Event:</label>
        <input name="ReceptionDate" type="text" value="ReceptionDate"/>
    </div>
    <div>
        <label>Start Time of Event:</label>
        <input name="StartTime" type="text" value="StartTime"/>
    </div>
    <div>
        <label>End Time of Event:</label>
        <input name="EndTime" type="text" value="EndTime"/>
    </div>
    <div>
        <label>Cost of Event:</label>
        <input name="ReceptionPrice" type="text" value="ReceptionPrice"/>
    </div>
    <div>
        <label>Description of Event:</label>
        <textarea name="ReceptionDescription" value="ReceptionDescription"></textarea>
    </div>

    <div>
        <input type="submit" value="Add Reception" />
    </div>
</form>